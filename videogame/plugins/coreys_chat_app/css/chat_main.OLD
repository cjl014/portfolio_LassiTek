body {
	background-image: url("../images/bg1.png");
}
.chat_authentication {
	max-width: 700px;
	width: 100%;
	height: 300px;
	background-color: lightslategrey;
	margin: 0 auto;
	border-radius: 50px;
	border: 5px solid lightgray;
}
.signupOrLogin {
	width: 100%;
	text-align: center;
	margin: 0 auto;
	padding-top: 90px;
}
.signIn_btn {
	font-size: 30px;
	width: 100%;
	max-width: 150px;
	outline: none;
}
.logIn_submit, .signUp_submit {
	border-radius: 50px;
	border-style: solid;
}
form {
	text-align: center;
	font-size: x-large;
	color: whitesmoke;
	display: none;
}
legend {
	color: lightblue;
}
fieldset {
	border-radius: 25px;
	text-align: center;
	font-size: x-large;
	height: 255px;

}
.form_input_fields {
	width: 100%;
	max-width: 400px;
	border-radius: 50px;
	font-size: x-large;
	padding: 5px 10px;
	color: gray;
	border: solid 3px lightblue;
	outline: none;
	box-sizing: border-box;
}
.chat_window {
	float: left;
	width: 70%;
	height: 500px;
	background-color: #f2f2f2;
	overflow: auto;
	box-sizing: border-box;
}
.chat_window table {
	vertical-align: bottom;
	height: 500px;
	width: 100%;
}
.chat_window td {
	vertical-align: bottom;
	height: 500px;
	padding-bottom: 10px;
}
.chat_users_window {
	float: right;
	width: 20%;
	height: 500px;
	background-color: dimgray;
	box-sizing: border-box;
}
.chat_users_window_title {
	background-color: lightslategrey;
	padding: 10px;
	font-size: large;
	border-bottom: 1px solid gray;
	font-family: Georgia;
	color: aquamarine;
}
.chat_user_div {
	padding: 12px 12px 8px 12px;
	color: lightgreen;
}
.chat_tb {
	width: 60%;
	height: 50px;
	border-radius: 20px 0px 0px 20px;
	border-bottom-color: darkgray;
	outline: none;
	font-size: 25px;
	color: gray;
	float: left;
	padding: 0px 10px;
	box-sizing: border-box;
}
.chat_box button {
	height: 50px;
	width: 10%;
	float:left;
	box-sizing: border-box;
}
.chat_img_btn img {
	width: 100%;
	max-width: 50px;
	min-width: 20px;
}
.img_file {
	visibility: hidden;
}
.chat_menu {
	float: left;
	width: 10%;
	height: 500px;
	background-color: lightslategrey;
	/*background-color: lavender;*/
	box-sizing: border-box;
}
.chat_menu button {
	width: 100%;
	height: 40px;
	opacity: 0.9;
	word-wrap: break-word;
}
.sent_msg_div, .receive_msg_div {
	font-size: x-large;
}
.receive_msg_div {
	text-align: right;
}
.chat_msg {
	padding: 16px;
	border-radius: 50px;
	background-color: lightyellow;
	display: inline-block;
	word-break: break-word;
}
.sent_msg {
	background-color: lightblue;
}
.receive_msg {
	background-color: lightgreen;
}
.loader_gif {
	display: none;
	text-align: center;
	margin: 0 auto;
}
